@model UIHarness.Models.PeopleVM

@{
    Layout = null;
}

<!DOCTYPE html>

<style>
    
     .MethodBox 
     {
         border: 2px solid;
         padding: 10px;
     }

</style>



<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>PeopleV1</title>
</head>
<body>
    <div class="MethodBox">
        <h1>Method 1</h1>
        <div>
            <h4>People Version 1</h4>
            <hr />
            <dl class="dl-horizontal"></dl>
        </div>
    <table>
        <tr>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Full Name
            </th>
            <th>
                Url
            </th>
        </tr>
        @foreach (var item in Model.People)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Url)
                </td>
            </tr>
        }
    </table>
        </div>
</body>
</html>
